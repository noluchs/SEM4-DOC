#cloud-config
package_update: true
package_upgrade: true
packages:
  - curl
  - sudo
  - openssh-client

write_files:
  # This key is well known and only for educational purposes
  - path: /opt/id_lerncloud
    permissions: '0600'
    encoding: b64
    content: |
      


  - path: /opt/k0s.yaml
    permissions: '0644'
    content: |
      ---
      apiVersion: k0sctl.k0sproject.io/v1beta1
      kind: Cluster
      metadata:
        name: cloud-hf-08
      spec:
        hosts:
        - ssh:
            address: cloud-hf-08-c1
            user: ubuntu
            port: 22
            keyPath: /opt/id_lerncloud
          role: controller
%{ for host in controller_hosts ~}
        - ssh:
            address: ${host}
            user: ubuntu
            port: 22
            keyPath: /opt/id_lerncloud
          role: controller
%{ endfor ~}
%{ for host in worker_hosts ~}
        - ssh:
            address: ${host}
            user: ubuntu
            port: 22
            keyPath: /opt/id_lerncloud
          role: worker
%{ endfor ~}
      ...

runcmd:
  - echo "Starting Cloud-init script" >> /var/log/cloud-init-debug.log
  - while ! ping -c 1 -W 1 8.8.8.8; do sleep 1; done
  - echo "Network is up" >> /var/log/cloud-init-debug.log
